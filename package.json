{
  "name": "ts-template",
  "version": "0.0.3",
  "type": "module",
  "description": "A template for typescript projects",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "bin": "dist/main.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:check": "tsc -p ./tsconfig.json",
    "build:js": "tsup --entry src/main.mts --entry src/index.ts --format cjs,esm --dts --sourcemap",
    "build": "npm run lint && npm run build:check && npm run build:js",
    "clean": "rimraf build dist coverage node_modules junit.xml",
    "dev": "ts-node-esm src/main.ts",
    "lint": "eslint --ext mts,cts,ts,js src",
    "lint:fix": "eslint --ext mts,cts,ts,js --fix src",
    "ncu": "ncu -u",
    "preversion": "npm run build && npm run test:ci",
    "start": "node build/main.js",
    "test:ci": "vitest run --coverage",
    "test": "vitest ",
    "type-check:watch": "npm run type-check -- --watch",
    "type-check": "tsc --noEmit",
    "version": "standard-version --skip.tag --tag-prefix ''"
  },
  "author": "You",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vitest/coverage-c8": "^0.28.3",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-check-updates": "^16.6.3",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vitest": "^0.28.3"
  }
}
